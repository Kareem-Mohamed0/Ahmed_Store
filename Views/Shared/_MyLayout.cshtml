<style>
    .category-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        text-decoration: none;
    }

    .list-group-item {
        transition: background-color 0.3s ease-in-out;
    }

    .category-link i {
        transition: transform 0.2s ease;
    }

    .category-link:hover i {
        transform: scale(1.1);
    }
</style>
<style>
    .cart_blus {
        transition: transform 0.2s ease;
    }

        .cart_blus:hover {
            transform: scale(1.4);
            z-index: 10;
        }

    .category_item:hover {
        color: #E0A800;
    }

    .product-card {
        position: relative;
        overflow: hidden;
        border-radius: 15px;
        transition: transform 0.2s ease;
        max-width: 270px;
    }

        .product-card:hover {
            color: dodgerblue;
            transform: scale(1.05);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }

    .product-img {
        width: 100%;
        height: 250px;
        object-fit: cover;
        cursor: pointer;
    }

    .cart-icon {
        position: absolute;
        top: 10px;
        right: 10px;
        background-color: rgba(0, 123, 255, 0.8);
        padding: 10px;
        border-radius: 50%;
        color: white;
        cursor: pointer;
    }

        .cart-icon i {
            font-size: 25px;
        }

    .discount-badge {
        position: absolute;
        top: 10px;
        left: 10px;
        background-color: green;
        color: white;
        padding: 5px;
        border-radius: 10px;
    }

    .product-info {
        padding: 15px;
    }

    .product-name {
        font-size: 1.2rem;
        font-weight: bold;
    }

    .product-price {
        color: #555;
        text-decoration: line-through;
    }

    .discounted-price {
        color: red;
        font-size: 1.2rem;
    }

    html, body {
        margin: 0;
        padding: 0;
        overflow-x: hidden;
    }

</style>

